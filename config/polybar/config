[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
underline = #fba922

[bar/main]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 2.5%
radius = 6.0
fixed-center = false
enable-ipc = true
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 2
padding = 1
module-margin = 1

font-0 = PragmataPro:pixelsize=13;1
font-1 = IPAMincho:style=regular:pixelsize=12;0
font-2 = unifont:fontformat=truetype:size=6:antialias=false;0
font-3 = NotoEmoji:style=Book:scale=16;0
font-4 = Siji:pixelsize=8;0
font-5 = fixed:pixelsize=8;0

modules-left = bspwm layout xwindow
modules-center =
modules-right = spotify pulseaudio battery date

tray-position = right
tray-padding = 2
tray-maxsize = 24

[global/wm]
margin-top = 0

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/bspwm]
type = internal/bspwm
pin-workspaces = false
enable-click = true
enable-scroll = true

label-focused = " %name% "
label-focused-underline = ${colors.underline}

label-occupied = " %name% "
label-occupied-foreground = #ffaa00

label-urgent = " %name% "
label-urgent-underline = #9b0a20

label-empty = " %name% "
label-empty-foreground = #555555

[module/memory]
type = internal/memory
interval = 2
format-prefix = "üóç "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used:2%%

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.underline}
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 =
ramp-signal-1 =
ramp-signal-2 =
ramp-signal-3 =
ramp-signal-4 =
ramp-signal-foreground = ${colors.foreground-alt}


[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-underline = ${colors.underline}
format-connected-prefix = "ÓÜú "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

; format-disconnected =
format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 60

date = %a. %d
date-alt = %a. %d %b

time = %H:%M
time-alt = ${self.time}

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline}

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = ‚Üë <label-charging>
format-charging-underline = #55aa55

format-discharging = ‚Üì <label-discharging>
format-discharging-underline = ${colors.underline}

format-full-prefix = ""
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 =
animation-charging-1 =
animation-charging-2 =
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 =
animation-discharging-1 =
animation-discharging-2 =
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}
format-volume-underline = ${colors.underline}

label-muted = üîá muted
label-muted-foreground = #666
scroll-up = pactl set-sink-volume 0 +2%
scroll-down = pactl set-sink-volume 0 -2%

[module/spotify]
type = custom/script
exec = ~/.local/bin/get_song
exec-if = "pgrep spotify"
format-padding = 1
format-underline = ${colors.underline}
click-left = playerctl -p spotify play-pause
click-right = bspc desktop -f '^6'
tail = true
interval = 1

[module/layout]
type = custom/script
exec = bspc query -T -d | jq -r .layout | head -c1
click-left = bspc desktop -l next
format-underline = #e60053
interval = 3

[settings]
screenchange-reload = true

