[user]
  name = Wadii Hajji
  email = wadii.hajji@etu.univ-amu.fr
[pull]
  rebase = true
[pager]
  branch = false
[alias]
  st = status --short --branch
  rank = shortlog -sn --no-merges
  sd = standup
  absorb = !git-absorb
  chop = !"git branch -vv --no-color | cut -c 3- | grep ': gone]' | awk '{ print $1 }' | xargs -n1 git branch -D"
  sb = show-branch
  squash = rebase --autosquash --interactive
  fixup = commit --amend --no-edit -v
  ff = pull --ff-only
[showbranch]
  default = --topo-order
